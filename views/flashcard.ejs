<!DOCTYPE html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Flashcard App</title>

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/flashcard.css" />
  </head>
  <body>
    <div class="container1">
        <div class="add-flashcard-con">
            <button id="add-flashcard">Add Flashcard</button>
        </div>

      <!-- Display Card of Question And Answers Here -->
      <div id="card-con">
        <div class="card-list-container">
            <%cards.forEach(card=>{ %>
                <div class="card1">
                    <p class="question-div"><%=card.question %></p>
                    <a href="#" class="show-hide-btn">Show/Hide</a>
                    <p class="answer-div hide"><%=card.answer%></p>
                    <div class="buttons-con">
                        <a href="/flashcards/edit/<%=card._id%>"><button class="edit"><i class="fa-solid fa-pen-to-square"></i></button></a>
                        <form action="/flashcards/<%=card._id%>?_method=DELETE" method="POST">
                        <button class="delete"><i class="fa-solid fa-trash-can"></i></button>
                        </form>
                    </div>
                </div>
           <% })%>

        </div>
      </div>
    </div>

    <!-- Input form for users to fill question and answer -->
    <form action="/flashcards/create" method="POST" class="question-container hide" id="add-question-card">
      <h2>Add Flashcard</h2>
      <div class="wrapper">
        <!-- Error message -->
        <div class="error-con">
          <span class="hide" id="error">Input fields cannot be empty!</span>
        </div>
        <!-- Close Button -->
        <i class="fa-solid fa-xmark" id="close-btn"></i>
      </div>

      <label for="question">Question:</label>
      <textarea class="input" name="question" id="question" placeholder="Type the question here..." rows="2" required="true"></textarea>
      <label for="answer">Answer:</label>
      <!-- <textarea name="answer" class="input"></textarea> -->
      <textarea name="answer" class="input" id="answer" rows="4" placeholder="Type the answer here..." required="true"></textarea>
      <label for="topic">Topic:</label>
      <input class="input" name="topic" id="topic" rows="4" placeholder="">
        <button type="submit" id="save-btn">Save</button>
    </form>



    <!-- Script -->
    <script src="/js/flashcard.js"></script>
  </body>
</html>